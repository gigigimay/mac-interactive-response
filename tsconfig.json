{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "config/*": ["config/*"],
      "services/*": ["services/*"],
      "types/*": ["types/*"],
      "utilities/*": ["utilities/*"],
      "webhook/*": ["webhook/*"],
    },
    "outDir": "dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noEmit": false
  },
  "path": {},
  "exclude": ["node_modules", "dist"]
}
